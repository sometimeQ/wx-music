/* components/playlist-area-item/index.wxss */

.item {
  /* display: inline-block; */
  /* display: flex; */
  width: 100%;
  margin-bottom: 10px;
}

.image-contain {
  position: relative;
}

.image-contain .image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  box-shadow: 0 5px 5px rgba(0,0,0,0.5);
}

/* 里面内容布局 */
.image-contain .play-counter {
  /* 布局 */
  display: flex;
  align-items: center;
  position: absolute;
  left: 1rpx;
  bottom: 10rpx;
  color: #fff;
  font-size: 22rpx;
  background: rgba(0, 0, 0, .5);
  border-radius: 12rpx;
  /* padding: 6rpx 10rpx; */
}

/* 播放小图标 */
.image-contain .arrow {
  width: 36rpx;
  height: 36rpx;
}

/* 名字 */
.item .name {
  width: 80%;
  font-size: 26rpx;
  /* height: 70rpx; */
  /* 显示两行 */
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  white-space: nowrap;
  overflow: hidden;
}

.item .copyright {
  width: 100%;
  font-size: 20rpx;
  color: #26ce8a;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}